{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "ES2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "./dist"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__mock__"
  ]
}